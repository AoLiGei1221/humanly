# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://humory_user:humory_password@localhost:5432/humory_dev
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-secret-key-here-generate-a-strong-random-string
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# CORS Configuration (comma-separated list of allowed origins)
# Add all your frontend domains here, including both production and development URLs
# Example: https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000,http://localhost:3002
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# Email Configuration
EMAIL_SERVICE=console
EMAIL_API_KEY=
EMAIL_FROM=noreply@humory.com
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=

# Rate Limiting
RATE_LIMIT_ENABLED=true

# AWS Configuration (Production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AI Assistant Configuration
# Provider: 'openai', 'anthropic', or 'mock' (default: mock for development)
AI_PROVIDER=mock
# API Key for AI provider (required for openai/anthropic)
AI_API_KEY=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
# Model to use (e.g., gpt-4-turbo-preview, claude-3-opus)
AI_MODEL=gpt-4-turbo-preview
# Optional: Custom base URL for API (useful for proxies or self-hosted models)
AI_BASE_URL=
# Maximum response tokens
AI_MAX_TOKENS=2048
# Temperature for response generation (0.0 - 1.0)
AI_TEMPERATURE=0.7
# Rate limiting for AI requests
AI_RATE_LIMIT_REQUESTS=20
AI_RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info

# Peer Review Storage (relative to backend directory)
PAPER_STORAGE_DIR=./storage/papers
RECORDING_STORAGE_DIR=./storage/recordings
